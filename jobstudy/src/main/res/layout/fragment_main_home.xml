<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mineHost"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.au.module_android.widget.CustomFontText
            android:id="@+id/title"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textColor="@color/color_text_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:text="@string/name_hello_format"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.au.module_android.widget.CustomFontText
            android:id="@+id/weather"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginEnd="20dp"
            android:layout_width="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_heart"
            android:layout_height="32dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.au.module_android.widget.CustomFontText
        android:layout_marginTop="48dp"
        android:textSize="20sp"
        android:text="英语单词萝卜斩!"
        android:layout_marginStart="@dimen/ui_padding_edge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/host"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/ui_padding_edge"
        android:paddingVertical="16dp"
        android:orientation="vertical"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_title_bar">

        <com.au.module_android.widget.CustomFontText
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subjectText"
            android:id="@+id/workTitle"
            android:layout_marginStart="12dp"
            android:text="今天的任务: "
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <!-- 第一行：今日需要新学和需复习 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <com.au.module_android.widget.CustomFontText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="需新学"
                    android:textColor="#ffffff"
                    android:textSize="21sp" />

                <com.au.module_android.widget.CustomFontText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="需复习"
                    android:textColor="#ffffff"
                    android:textSize="21sp" />

            </LinearLayout>

            <!-- 第二行：大数字显示 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <com.au.module_android.widget.CustomFontText
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="15"
                    android:textColor="#ffffff"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <com.au.module_android.widget.CustomFontText
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="8"
                    android:textColor="#ffffff"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </LinearLayout>
    </LinearLayout>

    <!-- 第三行：长条按钮 -->
    <com.au.module_android.widget.CustomButton
        android:id="@+id/startBtn"
        style="@style/StyleButtonPrimary"
        android:layout_marginHorizontal="@dimen/ui_padding_edge"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="开始学习单词吧!"
        android:textSize="21sp" />
</LinearLayout>