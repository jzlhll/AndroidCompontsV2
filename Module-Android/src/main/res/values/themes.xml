<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ShapeableImageView shapeAppearanceOverlay 圆角-->
    <style name="shape_round8dp_Style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <!-- app:strokeColor
app:strokeWidth -->
    </style>

    <!-- ShapeableImageView shapeAppearanceOverlay 圆形 -->
    <style name="shape_circle_Style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TranslucentActivityTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
<!--        <item name="android:windowTranslucentStatus">false</item> 不能加，加了systemUI有问题 -->
        <item name="android:background">@null</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

        <!-- 追加window淡入淡出-->
        <item name="android:windowAnimationStyle">@style/activity_fade_in_out</item>
    </style>

    <style name="TransparentThemeOld" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>