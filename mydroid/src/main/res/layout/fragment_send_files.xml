<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/descTitle"
        android:background="@color/logic_send"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <com.au.module_androidui.widget.CustomToolbar
        app:title="@string/app_file_send"
        android:id="@+id/toolbar"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#ffffff"
        app:navigationIcon="@drawable/icon_back"
        app:navigationIconTint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <com.au.module_androidui.widget.CustomFontText
        android:id="@+id/descTitle"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        style="@style/StyleAuTextThin"
        android:textColor="#ffffff"
        tools:text="不退出，不熄屏"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="26dp"/>

    <LinearLayout
        android:id="@+id/clientsHost"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/ui_padding_edge"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/descTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toTopOf="@id/rcvGuideLine"
        app:layout_constraintTop_toBottomOf="@id/clientsHost"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rcvGuideLine"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

    <com.au.module_androidui.widget.ShineView
        android:id="@+id/adHost"
        android:background="@color/color_normal_block"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/rcvGuideLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideLine"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideLine"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/descTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </eightbitlab.com.blurview.BlurView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bigImage"
        android:visibility="gone"
        android:background="@color/color_normal_block"
        app:layout_constraintStart_toStartOf="@id/leftGuideLine"
        app:layout_constraintEnd_toEndOf="@id/rightGuideLine"
        app:layout_constraintTop_toBottomOf="@id/descTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconPlay"
        android:visibility="gone"
        android:src="@drawable/ic_play_in_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="@color/white"
        android:layout_width="40dp"
        android:layout_height="40dp" />
</androidx.constraintlayout.widget.ConstraintLayout>