<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verGuide20"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verGuide80"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuide20"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuide50"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuide80"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/verticalLine1"
        android:background="@color/returnLineColorDisabled"
        app:layout_constraintStart_toStartOf="@id/verGuide20"
        android:layout_width="2dp"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/verticalLine2"
        app:layout_constraintStart_toStartOf="@id/verGuide80"
        android:layout_width="2dp"
        android:background="@color/returnLineColorDisabled"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/horzLine1"
        android:background="@color/returnLineColorDisabled"
        app:layout_constraintTop_toTopOf="@id/horGuide20"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <View
        android:id="@+id/horzLine2"
        app:layout_constraintTop_toTopOf="@id/horGuide50"
        android:layout_width="match_parent"
        android:background="@color/returnLineColorDisabled"
        android:layout_height="2dp" />

    <View
        android:id="@+id/horzLine3"
        android:background="@color/returnLineColorDisabled"
        app:layout_constraintTop_toTopOf="@id/horGuide80"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/adjustImageGroup"
        android:visibility="gone"
        app:constraint_referenced_ids="horzLine1, horzLine2, horzLine3, verticalLine1, verticalLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.au.module_android.widget.CustomButton
        android:id="@+id/selectedImageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Select a Image to Return it's Face"
        android:layout_marginHorizontal="@dimen/ui_padding_edge"
        style="@style/StyleButtonPrimary"
        android:layout_width="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>