<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#333333"
    tools:context=".MainActivity">

    <com.au.audiorecordplayer.cam2.view.Camera2View
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/settingBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_cam_setting"
        android:tint="@color/white"
        android:padding="2dp"
        android:layout_width="33dp"
        android:layout_height="33dp"/>

    <com.au.module_android.widget.ExpandableLayout
        android:id="@+id/expandSettings"
        app:layout_constraintTop_toBottomOf="@id/settingBtn"
        android:orientation="vertical"
        app:el_duration="200"
        app:el_expanded="false"
        app:el_parallax="0.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.au.module_android.widget.BgBuildLinearLayout
            app:backgroundNormal="#4f333333"
            android:orientation="horizontal"
            android:padding="8dp"
            app:cornerRadius="8dp"
            android:layout_marginHorizontal="@dimen/ui_padding_edge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.au.module_android.widget.BgBuildCustomFontText
                android:id="@+id/previewViewSurface"
                style="@style/StyleAuTextThinDp"
                android:text="Surface"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:layout_height="wrap_content" />
            <com.au.module_android.widget.BgBuildCustomFontText
                android:id="@+id/previewViewTexture"
                style="@style/StyleAuTextThinDp"
                android:paddingHorizontal="6dp"
                android:layout_marginHorizontal="4dp"
                android:paddingVertical="3dp"
                android:gravity="center"
                android:text="Texture"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <com.au.module_android.widget.BgBuildCustomFontText
                android:id="@+id/previewViewGL"
                style="@style/StyleAuTextThinDp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:layout_marginHorizontal="4dp"
                android:gravity="center"
                android:text="GLSurface"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </com.au.module_android.widget.BgBuildLinearLayout>

    </com.au.module_android.widget.ExpandableLayout>

    <com.au.module_android.widget.CustomFontText
        android:id="@+id/timeTv"
        style="@style/StyleAuTextNormal"
        android:textColor="#ff0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recordBtn"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:tint="@color/white"
        android:src="@drawable/ic_cam_take_record"
        android:contentDescription="start record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/takePicBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/btn_margin_bottom"
        android:elevation="2dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/takePicBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:tint="@color/white"
        android:src="@drawable/ic_cam_take_pic"
        android:contentDescription="take picture"
        android:layout_marginHorizontal="33dp"
        app:layout_constraintStart_toEndOf="@id/recordBtn"
        app:layout_constraintEnd_toStartOf="@id/switchCamBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/btn_margin_bottom"
        android:elevation="2dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/switchCamBtn"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/ic_cam_switch"
        android:tint="@color/white"
        android:text="front-back switch"
        app:layout_constraintStart_toEndOf="@id/takePicBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/btn_margin_bottom"
        android:elevation="2dp" />

    <com.au.module_android.widget.BgBuildCustomFontText
        android:id="@+id/toastInfo"
        style="@style/StyleAuTextNormal"
        app:backgroundNormal="#55f0f0f0"
        app:cornerRadius="6dp"
        android:visibility="gone"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toTopOf="@id/takePicBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>