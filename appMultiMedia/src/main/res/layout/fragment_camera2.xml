<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#333333"
    tools:context=".MainActivity">

    <com.au.audiorecordplayer.cam2.view.Camera2View
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.au.module_android.widget.BgBuildCustomFontText
        android:id="@+id/modeTv"
        style="@style/StyleAuTextThinDp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:backgroundNormal="#22f0f0f0"
        app:cornerRadius="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="StateDied"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/settingBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/ui_padding_edge"
        android:src="@drawable/ic_cam_setting"
        android:tint="@color/white"
        android:layout_width="33dp"
        android:layout_height="33dp"/>

    <com.au.module_android.widget.CustomFontText
        android:id="@+id/timeTv"
        style="@style/StyleAuTextNormal"
        android:textColor="#ff0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/modeTv"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recordBtn"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:tint="@color/white"
        android:src="@drawable/ic_cam_take_record"
        android:contentDescription="start record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/takePicBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/btn_margin_bottom"
        android:elevation="2dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/takePicBtn"
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:tint="@color/white"
        android:src="@drawable/ic_cam_take_pic"
        android:contentDescription="take picture"
        android:layout_marginHorizontal="33dp"
        app:layout_constraintStart_toEndOf="@id/recordBtn"
        app:layout_constraintEnd_toStartOf="@id/switchCamBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/btn_margin_bottom"
        android:elevation="2dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/switchCamBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_cam_switch"
        android:tint="@color/white"
        android:text="front-back switch"
        app:layout_constraintStart_toEndOf="@id/takePicBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/btn_margin_bottom"
        android:elevation="2dp" />

    <com.au.module_android.widget.BgBuildCustomFontText
        android:id="@+id/toastInfo"
        style="@style/StyleAuTextNormal"
        app:backgroundNormal="#55f0f0f0"
        app:cornerRadius="6dp"
        android:visibility="gone"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toTopOf="@id/takePicBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>