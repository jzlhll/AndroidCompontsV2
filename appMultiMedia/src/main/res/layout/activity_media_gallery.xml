<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.au.module_androidui.widget.CustomFontText
            style="@style/StyleAuBTextHeadline"
            android:paddingHorizontal="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:text="Audio Recorder and Player Demos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.au.module_androidui.widget.FlowLayout
            app:flChildSpacing="8dp"
            app:flRowSpacing="8dp"
            android:paddingHorizontal="4dp"
            android:background="#cccccc"
            android:paddingVertical="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.au.module_androidui.widget.BgBuildView
                android:id="@+id/changeColor1"
                app:backgroundNormal="#ff8800"
                app:needRippleColor="true"
                app:cornerRadius="4dp"
                android:layout_width="128dp"
                android:layout_height="48dp"/>
            <com.au.module_androidui.widget.BgBuildView
                android:id="@+id/changeColor2"
                app:backgroundNormal="#008800"
                app:cornerRadius="4dp"
                android:layout_width="128dp"
                android:layout_height="48dp"/>
            <com.au.module_androidui.widget.BgBuildView
                android:id="@+id/changeColor3"
                app:backgroundNormal="#000000"
                app:cornerRadius="4dp"
                android:layout_width="128dp"
                android:layout_height="48dp"/>
            <com.au.module_androidui.widget.BgBuildView
                android:id="@+id/changeColor4"
                app:backgroundNormal="#eeeeee"
                app:cornerRadius="4dp"
                android:layout_width="128dp"
                android:layout_height="48dp"/>
            <com.au.module_androidui.widget.BgBuildView
                android:id="@+id/changeColor5"
                app:cornerRadius="4dp"
                app:backgroundNormal="#4460ff"
                android:layout_width="128dp"
                android:layout_height="48dp"/>
        </com.au.module_androidui.widget.FlowLayout>

        <com.au.module_androidui.widget.FlowLayout
            android:id="@+id/flowLayout"
            android:paddingHorizontal="4dp"
            android:layout_marginTop="12dp"
            app:flChildSpacing="8dp"
            app:flRowSpacing="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/returnFaceBtn"
                style="@style/StyleButtonPrimary"
                android:text="Return face"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/audioRecorder"
                style="@style/StyleButtonPrimary"
                android:text="Audio Recorder"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/audioPlayer"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="Audio Player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/bluetooth"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/bluetoothBle"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="BLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/camera1"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="Camera1SurfaceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/camera1TextureView"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="Camera1TextureView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/camera2"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="Camera2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/camerax"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="CameraX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/uvcCamera"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="UVC Camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/drawView"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="drawView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/translateParticleFull"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="粒子特效-全屏透明"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.CustomButton
                android:id="@+id/translateParticleActivity"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:text="粒子特效-activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.au.module_androidui.widget.FlowLayout>
    </LinearLayout>
</ScrollView>