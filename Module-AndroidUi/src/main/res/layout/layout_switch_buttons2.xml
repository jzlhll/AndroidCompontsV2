<?xml version="1.0" encoding="utf-8"?>
<com.au.module_androidui.widget.BgBuildConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="32dp">

    <com.au.module_androidui.widget.BgBuildView
        android:id="@+id/selectBgView"
        app:layout_constraintStart_toStartOf="@id/leftTv"
        app:layout_constraintEnd_toEndOf="@id/leftTv"
        app:backgroundNormal="#ccffffff"
        app:cornerRadius="32dp"
        android:layout_height="match_parent"
        android:layout_width="0dp"/>

    <com.au.module_androidui.widget.BgBuildView
        android:id="@+id/selectBgViewDisable"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/leftTv"
        app:layout_constraintEnd_toEndOf="@id/leftTv"
        app:backgroundNormal="#cccccc"
        app:cornerRadius="32dp"
        android:layout_height="match_parent"
        android:layout_width="0dp"/>

    <com.au.module_androidui.widget.CustomFontText
        android:id="@+id/leftTv"
        android:paddingHorizontal="6dp"
        style="@style/StyleAuTextThin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightTv"
        tools:text="first" />

    <com.au.module_androidui.widget.CustomFontText
        android:id="@+id/rightTv"
        style="@style/StyleAuTextThin"
        android:layout_width="0dp"
        android:paddingHorizontal="6dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/leftTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="second" />
</com.au.module_androidui.widget.BgBuildConstraintLayout>